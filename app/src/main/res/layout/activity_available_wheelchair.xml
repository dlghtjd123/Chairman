<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 대여 가능한 휠체어 개수 -->
    <TextView
        android:id="@+id/tvAvailableAdult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Adult Wheelchairs: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvAvailableChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Child Wheelchairs: "
        android:textSize="18sp" />

    <!-- 대여 가능한 날짜 -->
    <TextView
        android:id="@+id/tvAvailableDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Dates: "
        android:textSize="18sp" />

    <ListView
        android:id="@+id/lvAvailableDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
