<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <!-- ScrollView 추가 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 사용자 모드 필드 -->
            <LinearLayout
                android:id="@+id/userModeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- 이메일 입력 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Email"
                    android:background="@drawable/input_background"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>

                <!-- 오류 메시지를 표시할 TextView -->
                <TextView
                    android:id="@+id/textViewEmailError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:visibility="gone" />
                <Button
                    android:id="@+id/btnCheckEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중복 확인"
                    android:backgroundTint="#000000"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="4dp" />

                <!-- 비밀번호 입력 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:background="@drawable/input_background"
                    android:padding="10dp"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>

                <!-- 비밀번호 조건-->
                <TextView
                    android:id="@+id/textViewPasswordError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <!-- 비밀번호 확인 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Confirm Password"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editTextConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/input_background"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textSize="16sp" />

                <!-- 오류 메시지 텍스트 -->
                <TextView
                    android:id="@+id/textViewPasswordConfirmError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:text="Passwords do not match."
                    android:visibility="gone"
                    android:textSize="14sp" />

                <!-- 이름 입력 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Name"
                    android:background="@drawable/input_background"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>

                <!-- 전화번호 입력 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editTextPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Phone Number"
                    android:background="@drawable/input_background"
                    android:padding="10dp"
                    android:inputType="phone"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>

                <!-- 전화번호 경고문 -->
                <TextView
                    android:id="@+id/textViewPhoneError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="전화번호 형식이 잘못되었습니다. 예: 010-1234-5678"
                    android:textColor="#FF0000"
                    android:textSize="12sp"
                    android:visibility="gone" />
                <Button
                    android:id="@+id/btnCheckPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중복 확인"
                    android:backgroundTint="#000000"

                    android:layout_marginTop="4dp" />

                <!-- 주소 입력 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editTextAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Address"
                    android:background="@drawable/input_background"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adminModeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- 코드 입력 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Code"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editTextCode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Code"
                    android:background="@drawable/input_background"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>

            <!-- 동의 항목 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <!-- 서비스 이용약관 동의 -->
                <CheckBox
                    android:id="@+id/checkBoxTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="서비스 이용약관에 동의합니다. (필수)"
                    android:layout_marginBottom="10dp" />

                <!-- 개인정보 수집 및 이용 동의 -->
                <CheckBox
                    android:id="@+id/checkBoxPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="개인정보 수집 및 이용에 동의합니다. (필수)"
                    android:layout_marginBottom="10dp" />

                <!-- 개인정보 제3자 제공 동의 -->
                <CheckBox
                    android:id="@+id/checkBoxThirdParty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="개인정보 제3자 제공에 동의합니다. (필수)"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>


            <!-- 회원가입 버튼 -->
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="회원가입"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
