<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- 대여 ID -->
    <TextView
        android:id="@+id/textViewRentalId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대여 ID: "
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 휠체어 ID -->
    <TextView
        android:id="@+id/textViewWheelchairId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휠체어 ID: "
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewRentalId"
        android:layout_marginTop="8dp" />

    <!-- 휠체어 타입 -->
    <TextView
        android:id="@+id/textViewWheelchairType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휠체어 타입: "
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewWheelchairId"
        android:layout_marginTop="8dp" />

    <!-- 대여 날짜 -->
    <TextView
        android:id="@+id/textViewRentalDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대여일:  ~ 반납일: "
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewWheelchairType"
        android:layout_marginTop="8dp" />

    <!-- 대여인 -->
    <TextView
        android:id="@+id/textViewuserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대여인: "
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewRentalDates"
        android:layout_marginTop="8dp" />

    <!-- 대여인 전화번호 -->
    <TextView
        android:id="@+id/textViewUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호: "
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewuserName"
        android:layout_marginTop="8dp" />

    <!-- 승인 버튼 -->
    <Button
        android:id="@+id/buttonApprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="승인"
        android:textSize="14sp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 거절 버튼 -->
    <Button
        android:id="@+id/buttonReject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거절"
        android:textSize="14sp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/buttonApprove"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
