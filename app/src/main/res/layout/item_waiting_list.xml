<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- 대여 ID -->
    <TextView
        android:id="@+id/textViewRentalId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대여 ID: "
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 휠체어 ID -->
    <TextView
        android:id="@+id/textViewWheelchairId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휠체어 ID: "
        app:layout_constraintTop_toBottomOf="@id/textViewRentalId"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 휠체어 타입 -->
    <TextView
        android:id="@+id/textViewWheelchairType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휠체어 타입: "
        app:layout_constraintTop_toBottomOf="@id/textViewWheelchairId"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 대여 날짜 -->
    <TextView
        android:id="@+id/textViewRentalDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대여일:  ~ 반납일: "
        app:layout_constraintTop_toBottomOf="@id/textViewWheelchairType"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 대여인 -->
    <TextView
        android:id="@+id/textViewuserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대여인: "
        app:layout_constraintTop_toBottomOf="@id/textViewRentalDates"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 대여인 전화번호 -->
    <TextView
        android:id="@+id/textViewUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호: "
        app:layout_constraintTop_toBottomOf="@id/textViewuserName"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 승인 버튼 -->
    <Button
        android:id="@+id/buttonApprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="승인"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 거절 버튼 -->
    <Button
        android:id="@+id/buttonReject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거절"
        app:layout_constraintTop_toBottomOf="@id/buttonApprove"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
